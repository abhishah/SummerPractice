<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.practice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.practice.splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.practice.Adder"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.practice.Adder" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.practice.List"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.practice.LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.practice.AboutUs"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.practice.About" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.practice.Prefs"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.practice.Prefs" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.practice.Textplay"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.practice.Email"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.practice.Camera" android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.practice.GFXSurface" android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.practice.OpenedClass" android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.practice.Data" android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.example.practice.GFX"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
